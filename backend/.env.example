# Django Configuration
SECRET_KEY=your-django-secret-key-here-generate-a-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/food_scanner_db

# LLM Provider Configuration
# Primary LLM provider: gemini, openai, or anthropic
LLM_PROVIDER=gemini

# Google Gemini API (Primary - Required)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API (Optional - Alternative provider)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API (Optional - Alternative provider)  
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# External API Configuration
OPEN_FOOD_FACTS_API_URL=https://world.openfoodfacts.org/api/v0

# CORS Configuration (for frontend integration)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings (Production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Email Configuration (Optional - for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting (Production)
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_MINUTE=60
